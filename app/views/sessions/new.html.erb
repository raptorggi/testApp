<%= content_for :title do %>
  Sign in
<% end %>

<h1> Sign in </h1>

<%= flash.now[:error] %>

<%= form_for(:session, url: sessions_path) do |u| %>
  <div class="form-group">
    <%= u.text_field :email, class: "form-control", placeholder: 'E-mail' %>
  </div> 
  <div class="form-group">
    <%= password_field_tag 'session[password]', nil, class: "form-control", placeholder: 'Password' %>
  </div>
  <%= u.submit "Sign in"%>
<% end %>

<%= link_to "https://oauth.vk.com/authorize?client_id=#{ENV['VK_CLIENT_ID']}&display=page&redirect_uri=#{ENV['VK_REDIRECT_URI']}/vk_callback&scope=email&response_type=code&v=5.80"  do %>
  <button type="button" class="btn btn-primary">Sign with VK</button>
<% end %>
