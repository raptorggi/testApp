<%= content_for :title do %>
  Sign in
<% end %>

<h1> Sign in </h1>

<%= flash.now[:error] %>

<%= form_for(:session, url: sessions_path) do |u| %>
  <div class="form-group">
    <%= u.text_field :email, class: "form-control", placeholder: 'E-mail' %>
  </div> 
  <div class="form-group">
    <%= password_field_tag 'session[password]', nil, class: "form-control", placeholder: 'Password' %>
  </div>
  <%= u.submit "Sign in"%>
<% end %>