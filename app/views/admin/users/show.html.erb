<%= content_for :title do %>
  <%= @user.name %>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Name</h3>
  </div>
  <div class="panel-body">
    <%= @user.name %>
  </div>
  <div class="panel-heading">
    <h3 class="panel-title">E-mail</h3>
  </div>
  <div class="panel-body">
    <%= @user.email %>
  </div>
  <div class="panel-heading">
    <h3 class="panel-title">Admin</h3>
  </div>
  <div class="panel-body">
    <%= @user.admin %>
  </div>
</div>

<%= link_to "Update",  edit_admin_user_path(id: @user.id) %> 
<%= link_to "Delete",  admin_user_path(id: @user.id), :method => :delete, data: {confirm: "Confirm delete?"} %> 