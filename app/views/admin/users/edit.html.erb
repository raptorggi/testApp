<%= content_for :title do %>
  <%= @user.name %>
<% end %>

<%= form_for @user, url: admin_user_path(@user), :methos => :put do |u| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="form-group">
    <%= u.text_field :name, class: "form-control", placeholder: 'Name' %>
  </div>
  <div class="form-group">
    <%= u.text_field :email, class: "form-control", placeholder: 'E-mail' %>
  </div>
  <div class="form-group">
    <%= password_field_tag 'user[password]', nil,  class: "form-control", placeholder: 'Password' %>
  </div>
  <div class="form-group">
    <%= password_field_tag 'user[password_confirmation]', nil, class: "form-control", placeholder: 'Confirm password' %>
  </div>  
  <%= u.submit "Update" %>  
<% end %>
