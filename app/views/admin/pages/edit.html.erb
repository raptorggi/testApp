<%= content_for :title do %>
  <%= @page.title %>
<% end %>

<%= form_for @page, url: admin_page_path(@page), :methos => :put do |p| %>
  <% if @page.errors.any? %>
    <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="form-group">
    <%= p.text_field :title, class: "form-control", placeholder: 'Title' %>
  </div>
  <div class="form-group">
    <%= p.text_area :text, class: "form-control", placeholder: 'Text' %>
  </div>
  <%= p.submit "Update" %>  
<% end %>