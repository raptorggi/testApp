<%= content_for :title do %>
  Edit <%= @feedback.name %>
<% end %>

<%= form_for @feedback, url: admin_feedback_path(@feedback), :method => :put do |f| %>
  <% if @feedback.errors.any? %>
    <ul>
      <% @feedback.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: 'Name' %>
  </div>
  <div class="form-group">
    <%= f.text_field :email, class: "form-control", placeholder: 'E-mail' %>
  </div>
  <div class="form-group">
    <%= f.text_field :phone, class: "form-control", placeholder: 'Phone' %>
  </div>
  <div class="form-group">
    <%= f.text_field :message, class: "form-control", placeholder: 'Message' %>
  </div>  
  <%= f.submit "Update" %>
<% end %>
