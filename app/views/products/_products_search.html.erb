<%= form_tag search_product_path(params[:locale]), method: :get, class: "form-inline my-2 my-lg-0" do %>
  <%= text_field_tag :name, nil, placeholder: t('products.search.placeholder'), class: 'form-control mr-sm-2' %>
  <%= submit_tag t('products.search.search'), name: nil, class: 'btn btn-outline-success my-2 my-sm-0' %>
<% end %>