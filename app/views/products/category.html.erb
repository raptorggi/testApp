<%= content_for :title do %>
  locale_name(@category)
<% end %>
<h2 id="cart-message" class="badge badge-secondary" data-text=<%= t('products.buy') %>></h2>
<h1> <%= locale_name(@category) %> <h1>
<p> <%= @category.description %> </p>

<hr>
<% @products.each do |product| %>
  <div class="row">
    <div class="col-sm-9">
      <h4> <%=link_to locale_name(product), show_product_path(params[:slug], product.slug) %> </h4>
      <%= image_tag product.image.url(:med) %>
    </div>
    <div class="col-sm-3">
      <h4><%= "#{product.price} #{t('currency')}" %></h4>
      <% if product.left <= 0 %>
        <h5><%= t('products.sold') %></h5>
      <% else %>
        <h5><%= "#{t('products.quantity')}#{product.left}" %> </h5>
        <%= button_tag t('buttons.buy'), data: { product_slug: product.slug, product_name: locale_name(product).to_s }, class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
  <hr>
<% end %>
