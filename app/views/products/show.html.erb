<%= content_for :title do %>
  <%= @product.name %>
<% end %>
<h3 id="cart-message" class="badge badge-secondary"></h3>

<%= content_tag :h1, data: {product_name: @product.name.to_s } do %> <%= @product.name %> <% end %>
<h3> <%= @product.description %> </h3>
<h3> Price: <%= @product.price %> </h3>
<%= image_tag @product.image.url(:med) %>
<br>
<%= button_tag "Купить", data: {add_to_cart: @product.slug}, class: "btn btn-primary btn-lg" %>