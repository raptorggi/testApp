<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <h1>Новый заказ <%= @user_email %>:</h1>

    <table class="table table-borderless table-hover">
      <thead>
        <tr>
          <th scope="col" width="5%">#</th>
          <th scope="col" width="60%"><%= t('carts.product') %></th>
          <th scope="col" width="15%"><%= t('carts.price') %></th>
          <th scope="col" width="20%"><%= t('carts.quantity') %></th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_products.each_with_index do |prod, i| %>
          <tr>
            <th><%= i + 1 %></th>
            <td><%=link_to locale_name(prod.product), show_product_url(prod.product.category.slug, prod.product.slug) %></td>
            <td ><%= prod.product.price %></td>
            <td><%= prod.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>